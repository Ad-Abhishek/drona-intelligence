---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL;
// Ensure base ends with slash for proper concatenation
const basePath = base.endsWith('/') ? base : base + '/';
---

<Layout title="Drona Intelligence - AI & Software Solutions">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-16">
    <!-- Background Animation -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-blue-500 rounded-full mix-blend-multiply filter blur-xl animate-float"></div>
      <div class="absolute top-1/3 right-1/4 w-64 h-64 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl animate-float" style="animation-delay: 2s;"></div>
      <div class="absolute bottom-1/4 left-1/3 w-64 h-64 bg-cyan-500 rounded-full mix-blend-multiply filter blur-xl animate-float" style="animation-delay: 4s;"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="animate-fade-in-up">
        <h1 class="text-5xl md:text-7xl font-space font-bold mb-6">
          <span class="gradient-text">Drona Intelligence</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto">
          Empowering the future with <span class="text-blue-400 font-semibold">Artificial Intelligence</span> 
          and cutting-edge software solutions
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a 
            href={`${basePath}services/`} 
            class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 hover-glow transform hover:scale-105"
          >
            Explore Services
          </a>
          <a 
            href="https://calendly.com/dronaintelligence/30min" 
            class="border border-blue-500 text-blue-400 hover:bg-blue-500 hover:text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-105"
          >
            Book Consultation
          </a>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-gray-800/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-space font-bold gradient-text mb-4">Why Choose Drona Intelligence?</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          We combine cutting-edge technology with innovative thinking to deliver solutions that transform businesses
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="bg-gray-900/50 backdrop-blur-sm p-8 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover-glow group">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-lg flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-4">AI Innovation</h3>
          <p class="text-gray-400">
            Harness the power of artificial intelligence to automate processes, gain insights, and drive innovation in your business.
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="bg-gray-900/50 backdrop-blur-sm p-8 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover-glow group">
          <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-4">Custom Software</h3>
          <p class="text-gray-400">
            Tailored software solutions built with modern technologies to meet your specific business requirements and goals.
          </p>
        </div>

        <!-- Feature 3 -->
        <div class="bg-gray-900/50 backdrop-blur-sm p-8 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover-glow group">
          <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-teal-500 rounded-lg flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-4">Expert Training</h3>
          <p class="text-gray-400">
            Comprehensive bootcamps and training programs to upskill your team with the latest technologies and methodologies.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Preview -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-space font-bold gradient-text mb-4">Our Services</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          From AI integration to full-stack development, we provide comprehensive technology solutions
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Service Cards -->
        <div class="bg-gradient-to-br from-gray-900 to-gray-800 p-6 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover:transform hover:scale-105">
          <h3 class="text-lg font-semibold text-white mb-3">AI Integration</h3>
          <p class="text-gray-400 text-sm">Seamlessly integrate AI capabilities into your existing systems</p>
        </div>

        <div class="bg-gradient-to-br from-gray-900 to-gray-800 p-6 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover:transform hover:scale-105">
          <h3 class="text-lg font-semibold text-white mb-3">Web Development</h3>
          <p class="text-gray-400 text-sm">Modern, responsive web applications built with cutting-edge technologies</p>
        </div>

        <div class="bg-gradient-to-br from-gray-900 to-gray-800 p-6 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover:transform hover:scale-105">
          <h3 class="text-lg font-semibold text-white mb-3">Mobile Apps</h3>
          <p class="text-gray-400 text-sm">Native and cross-platform mobile applications for iOS and Android</p>
        </div>

        <div class="bg-gradient-to-br from-gray-900 to-gray-800 p-6 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover:transform hover:scale-105">
          <h3 class="text-lg font-semibold text-white mb-3">UI/UX Design</h3>
          <p class="text-gray-400 text-sm">User-centered design that creates engaging digital experiences</p>
        </div>

        <div class="bg-gradient-to-br from-gray-900 to-gray-800 p-6 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover:transform hover:scale-105">
          <h3 class="text-lg font-semibold text-white mb-3">Business Intelligence</h3>
          <p class="text-gray-400 text-sm">Data-driven insights to make informed business decisions</p>
        </div>

        <div class="bg-gradient-to-br from-gray-900 to-gray-800 p-6 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover:transform hover:scale-105">
          <h3 class="text-lg font-semibold text-white mb-3">Consulting</h3>
          <p class="text-gray-400 text-sm">Strategic technology consulting to accelerate your digital transformation</p>
        </div>
      </div>

      <div class="text-center mt-12">
        <a 
          href={`${basePath}services/`} 
          class="inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold transition-all duration-300 hover-glow"
        >
          View All Services
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-blue-900/50 to-purple-900/50">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-space font-bold text-white mb-6">
        Ready to Transform Your Business?
      </h2>
      <p class="text-xl text-gray-300 mb-8">
        Let's discuss how our AI and software solutions can drive your success
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="https://calendly.com/dronaintelligence/30min" 
          class="bg-white text-gray-900 hover:bg-gray-100 px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-105"
        >
          Schedule Consultation
        </a>
        <a 
          href={`${basePath}bootcamp/`} 
          class="border border-white text-white hover:bg-white hover:text-gray-900 px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-105"
        >
          Explore Bootcamps
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
