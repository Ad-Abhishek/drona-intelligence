---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL;
const basePath = base.endsWith('/') ? base : base + '/';

const jobs = [
  {
    id: 1,
    jobId: "DI-ENG-247",
    title: "Senior Full Stack Developer",
    department: "Engineering",
    location: "Remote / Hybrid",
    type: "Full-time",
    salary: "Rs 80,000 - Rs 120,000",
    status: "open",
    color: "orange"
  },
  {
    id: 2,
    jobId: "DI-AI-583",
    title: "AI/ML Engineer",
    department: "AI Research",
    location: "On-site",
    type: "Full-time",
    salary: "Rs 90,000 - Rs 140,000",
    status: "open",
    color: "red"
  },
  {
    id: 3,
    jobId: "DI-DES-419",
    title: "UI/UX Designer",
    department: "Design",
    location: "Remote",
    type: "Full-time",
    salary: "Rs 60,000 - Rs 90,000",
    status: "open",
    color: "amber"
  },
  {
    id: 4,
    jobId: "DI-OPS-762",
    title: "DevOps Engineer",
    department: "Infrastructure",
    location: "Hybrid",
    type: "Full-time",
    salary: "Rs 75,000 - Rs 110,000",
    status: "open",
    color: "orange"
  },
  {
    id: 5,
    jobId: "DI-DATA-391",
    title: "Data Analyst",
    department: "Analytics",
    location: "Remote",
    type: "Full-time",
    salary: "Rs 55,000 - Rs 85,000",
    status: "closed",
    color: "gray"
  },
  {
    id: 6,
    jobId: "DI-PM-628",
    title: "Product Manager",
    department: "Product",
    location: "Hybrid",
    type: "Full-time",
    salary: "Rs 95,000 - Rs 135,000",
    status: "closed",
    color: "gray"
  },
  {
    id: 7,
    jobId: "DI-QA-174",
    title: "QA Engineer",
    department: "Quality Assurance",
    location: "On-site",
    type: "Full-time",
    salary: "Rs 50,000 - Rs 75,000",
    status: "closed",
    color: "gray"
  }
];
---

<Layout title="Career - Drona Intelligence">
  <Navigation />
  
  <!-- Hero Section with Split Design -->
  <section class="relative min-h-screen flex items-center overflow-hidden bg-white">
    <!-- Left Side - Content -->
    <div class="w-full lg:w-1/2 px-4 sm:px-6 lg:px-16 py-32 relative z-10">
      <div class="max-w-2xl">
        <span class="text-orange-600 text-sm font-semibold tracking-wider uppercase mb-4 block">Join Our Team</span>
        <h1 class="text-6xl lg:text-8xl font-sora font-bold text-gray-900 mb-8 leading-none">
          Build the<br/>
          <span class="text-orange-600">Future</span><br/>
          With Us
        </h1>
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          We're looking for talented individuals who are passionate about technology, innovation, and making a real impact.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a 
            href="#open-positions" 
            class="inline-flex items-center justify-center bg-gradient-to-r from-orange-500 to-red-500 text-white px-8 py-4 rounded-xl font-semibold transition-all duration-200 hover:shadow-2xl hover:shadow-orange-500/30"
          >
            View Open Roles
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
          <a 
            href="#culture" 
            class="inline-flex items-center justify-center border-2 border-gray-300 text-gray-700 hover:border-orange-500 hover:text-orange-600 px-8 py-4 rounded-xl font-semibold transition-all duration-200"
          >
            Our Culture
          </a>
        </div>
      </div>
    </div>

    <!-- Right Side - Visual Element -->
    <div class="hidden lg:block lg:w-1/2 absolute right-0 top-0 bottom-0">
      <div class="relative h-full bg-gradient-to-br from-orange-50 to-red-50 flex items-center justify-center">
        <!-- Decorative circles -->
        <div class="absolute top-20 right-20 w-64 h-64 bg-orange-200 rounded-full opacity-40 blur-3xl"></div>
        <div class="absolute bottom-20 right-40 w-80 h-80 bg-red-200 rounded-full opacity-30 blur-3xl"></div>
        
        <!-- Stats -->
        <div class="relative z-10 space-y-8 p-12">
          <div class="bg-white rounded-2xl p-8 shadow-xl transform hover:scale-105 transition-transform duration-300">
            <div class="text-5xl font-bold text-orange-600 mb-2">{jobs.length}+</div>
            <div class="text-gray-600 font-medium">Open Positions</div>
          </div>
          <div class="bg-white rounded-2xl p-8 shadow-xl transform hover:scale-105 transition-transform duration-300 ml-12">
            <div class="text-5xl font-bold text-orange-600 mb-2">50+</div>
            <div class="text-gray-600 font-medium">Team Members</div>
          </div>
          <div class="bg-white rounded-2xl p-8 shadow-xl transform hover:scale-105 transition-transform duration-300">
            <div class="text-5xl font-bold text-orange-600 mb-2">100%</div>
            <div class="text-gray-600 font-medium">Remote Friendly</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Culture Section with Diagonal Layout -->
  <section id="culture" class="py-20 px-4 sm:px-6 lg:px-8 bg-gray-50 relative overflow-hidden">
    <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-br from-orange-500 to-red-600 transform skew-x-12 origin-top-right"></div>
    
    <div class="max-w-7xl mx-auto relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-5xl font-sora font-bold text-gray-900 mb-6">Why Work Here?</h2>
          <p class="text-xl text-gray-600 mb-8">
            We're not just building software. We're building careers, fostering innovation, and creating an environment where you can do your best work.
          </p>
          
          <div class="space-y-6">
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-sora font-bold text-gray-900 mb-2">Cutting-Edge Projects</h3>
                <p class="text-gray-600">Work on AI and software solutions that push technological boundaries</p>
              </div>
            </div>

            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-sora font-bold text-gray-900 mb-2">Continuous Learning</h3>
                <p class="text-gray-600">Training budget, conferences, and mentorship programs</p>
              </div>
            </div>

            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-sora font-bold text-gray-900 mb-2">Flexible Work</h3>
                <p class="text-gray-600">Remote options, flexible hours, and work-life balance</p>
              </div>
            </div>

            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-sora font-bold text-gray-900 mb-2">Collaborative Team</h3>
                <p class="text-gray-600">Work with talented, supportive colleagues who care</p>
              </div>
            </div>
          </div>
        </div>

        <div class="lg:pl-16">
          <div class="bg-white rounded-3xl p-8 shadow-2xl">
            <blockquote class="text-2xl font-sora text-gray-900 mb-6 leading-relaxed">
              "Best decision I ever made. The team is incredible, the projects are challenging, and I'm learning something new every day."
            </blockquote>
            <div class="flex items-center gap-4">
              <div class="w-16 h-16 bg-gradient-to-br from-orange-400 to-red-500 rounded-full"></div>
              <div>
                <div class="font-semibold text-gray-900">Shekhar Paudel</div>
                <div class="text-gray-600">Senior Developer</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Open Positions - Creative Staggered Layout -->
  <section id="open-positions" class="py-20 px-4 sm:px-6 lg:px-8 bg-white">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-5xl lg:text-6xl font-sora font-bold text-gray-900 mb-4">Open Positions</h2>
        <p class="text-xl text-gray-600">Find your next adventure</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {jobs.map((job) => (
          <div 
            class={`group relative ${job.status === 'open' ? `bg-gradient-to-r from-${job.color}-50 to-white border-2 border-${job.color}-100 hover:border-${job.color}-300 hover:shadow-lg` : 'bg-gray-50 border-2 border-gray-200 opacity-75'} rounded-2xl p-5 transition-all duration-300`}
          >
            <!-- Job ID Badge & Status -->
            <div class="absolute top-4 right-4 flex items-center gap-2">
              {job.status === 'closed' && (
                <div class="px-2 py-1 bg-gray-400 rounded-full">
                  <span class="text-white text-xs font-semibold uppercase tracking-wider">Closed</span>
                </div>
              )}
              <div class={`px-2 py-1 ${job.status === 'open' ? 'bg-gray-900' : 'bg-gray-500'} rounded-full`}>
                <span class="text-white text-xs font-mono font-semibold tracking-wider">{job.jobId}</span>
              </div>
            </div>

            <div class="pr-24">
              <div class="flex items-center gap-2 mb-2">
                <div class={`w-2 h-2 ${job.status === 'open' ? `bg-${job.color}-500 animate-pulse` : 'bg-gray-400'} rounded-full`}></div>
                <span class={`${job.status === 'open' ? `text-${job.color}-700` : 'text-gray-500'} text-xs font-semibold uppercase tracking-wider`}>{job.department}</span>
              </div>
              <h3 class={`text-xl font-sora font-bold ${job.status === 'open' ? 'text-gray-900' : 'text-gray-600'} mb-3`}>{job.title}</h3>
              <div class="flex flex-wrap gap-3 text-sm text-gray-600">
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  {job.location}
                </span>
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  {job.type}
                </span>
              </div>
              <div class={`mt-2 text-sm font-semibold ${job.status === 'open' ? `text-${job.color}-600` : 'text-gray-500'}`}>
                {job.salary}
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- How to Apply Section -->
      <div class="mt-12">
        <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
          <h3 class="text-lg font-sora font-bold text-gray-900 mb-3">How to Apply</h3>
          <p class="text-sm text-gray-600 leading-relaxed">
            Send your resume to <a href="mailto:careers@dronaintelligence.com" class="text-orange-600 font-semibold hover:underline">careers@dronaintelligence.com</a> with the Job ID in the subject line. We'll respond within 2-3 business days.
          </p>
        </div>
      </div>

      <div class="mt-16 text-center">
        <p class="text-gray-600 mb-6">Don't see the right role? We're always looking for talented people.</p>
        <a 
          href="mailto:careers@dronaintelligence.com" 
          class="inline-flex items-center gap-2 border-2 border-gray-300 text-gray-700 hover:border-orange-500 hover:text-orange-600 px-8 py-4 rounded-xl font-semibold transition-all duration-200"
        >
          Send Us Your Resume
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Perks Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-orange-50 to-red-50">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-5xl font-sora font-bold text-gray-900 mb-4">Perks & Benefits</h2>
        <p class="text-xl text-gray-600">We take care of our team</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="text-4xl mb-4">üí∞</div>
          <h3 class="text-xl font-sora font-bold text-gray-900 mb-2">Competitive Salary</h3>
          <p class="text-gray-600">Industry-leading compensation packages and bonuses</p>
        </div>

        <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="text-4xl mb-4">üèñÔ∏è</div>
          <h3 class="text-xl font-sora font-bold text-gray-900 mb-2">PTOs Available</h3>
          <p class="text-gray-600">Take the time you need to recharge and refresh</p>
        </div>

        <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="text-4xl mb-4">üíª</div>
          <h3 class="text-xl font-sora font-bold text-gray-900 mb-2">Latest Equipment</h3>
          <p class="text-gray-600">MacBook Pro, monitors, and tools you need</p>
        </div>

        <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="text-4xl mb-4">üìö</div>
          <h3 class="text-xl font-sora font-bold text-gray-900 mb-2">Learning Budget</h3>
          <p class="text-gray-600">Annual budget for courses, books, and conferences</p>
        </div>

        <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="text-4xl mb-4">üè†</div>
          <h3 class="text-xl font-sora font-bold text-gray-900 mb-2">Remote First</h3>
          <p class="text-gray-600">Work from anywhere with flexible hours</p>
        </div>

        <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="text-4xl mb-4">üöÄ</div>
          <h3 class="text-xl font-sora font-bold text-gray-900 mb-2">Career Growth</h3>
          <p class="text-gray-600">Clear paths for advancement and skill development</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gray-900">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl lg:text-6xl font-sora font-bold text-white mb-6 leading-tight">
        Ready to Join Us?
      </h2>
      <p class="text-xl text-gray-300 mb-10">
        Let's build something amazing together
      </p>
      <a 
        href="https://calendly.com/dronaintelligence/30min" 
        class="inline-flex items-center gap-2 bg-gradient-to-r from-orange-500 to-red-500 text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-200 hover:shadow-2xl hover:shadow-orange-500/30"
      >
        Schedule a Chat
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </section>

  <Footer />
</Layout>
