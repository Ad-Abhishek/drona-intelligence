---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="About Us - Drona Intelligence">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-br from-gray-900 via-blue-900/20 to-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-space font-bold gradient-text mb-6">About Drona Intelligence</h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Pioneering the future of technology through innovative AI solutions and cutting-edge software development
      </p>
    </div>
  </section>

  <!-- Company Vision & Mission -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-4xl font-space font-bold gradient-text mb-8">Our Vision</h2>
          <p class="text-lg text-gray-300 mb-6">
            To be the leading force in democratizing artificial intelligence and advanced software solutions, 
            making cutting-edge technology accessible to businesses of all sizes across the globe.
          </p>
          <p class="text-lg text-gray-300">
            We envision a world where every organization can harness the power of AI to drive innovation, 
            improve efficiency, and create meaningful impact in their respective industries.
          </p>
        </div>
        <div class="relative">
          <div class="bg-gradient-to-br from-blue-900/50 to-purple-900/50 p-8 rounded-2xl border border-gray-700">
            <h3 class="text-2xl font-bold text-white mb-4">Our Mission</h3>
            <p class="text-gray-300 mb-4">
              To empower businesses through innovative technology solutions that drive growth, efficiency, and competitive advantage.
            </p>
            <ul class="space-y-2 text-gray-300">
              <li class="flex items-center">
                <svg class="w-5 h-5 text-blue-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Deliver exceptional AI and software solutions
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-blue-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Foster innovation and continuous learning
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-blue-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Build long-term partnerships with our clients
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Company Values -->
  <section class="py-20 bg-gray-800/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-space font-bold gradient-text mb-4">Our Core Values</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          These principles guide everything we do and shape our company culture
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="bg-gray-900/50 backdrop-blur-sm p-6 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover-glow text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-3">Innovation</h3>
          <p class="text-gray-400 text-sm">
            Constantly pushing boundaries and exploring new technologies to deliver cutting-edge solutions.
          </p>
        </div>

        <div class="bg-gray-900/50 backdrop-blur-sm p-6 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover-glow text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-teal-500 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-3">Excellence</h3>
          <p class="text-gray-400 text-sm">
            Committed to delivering the highest quality solutions that exceed client expectations.
          </p>
        </div>

        <div class="bg-gray-900/50 backdrop-blur-sm p-6 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover-glow text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-3">Collaboration</h3>
          <p class="text-gray-400 text-sm">
            Working together as a team and with our clients to achieve shared success and goals.
          </p>
        </div>

        <div class="bg-gray-900/50 backdrop-blur-sm p-6 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover-glow text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-orange-500 to-red-500 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-3">Integrity</h3>
          <p class="text-gray-400 text-sm">
            Maintaining transparency, honesty, and ethical practices in all our business relationships.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Company Policies -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-space font-bold gradient-text mb-4">Company Policies</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Our commitment to creating a positive, inclusive, and productive work environment
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div class="space-y-8">
          <div class="bg-gradient-to-br from-gray-900 to-gray-800 p-8 rounded-2xl border border-gray-700">
            <h3 class="text-2xl font-bold text-white mb-4 flex items-center">
              <svg class="w-6 h-6 text-blue-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
              Diversity & Inclusion
            </h3>
            <p class="text-gray-300 mb-4">
              We are committed to fostering a diverse and inclusive workplace where everyone feels valued, respected, and empowered to contribute their best work.
            </p>
            <ul class="space-y-2 text-gray-400">
              <li>• Equal opportunity employment practices</li>
              <li>• Zero tolerance for discrimination or harassment</li>
              <li>• Inclusive hiring and promotion processes</li>
              <li>• Regular diversity and inclusion training</li>
            </ul>
          </div>

          <div class="bg-gradient-to-br from-gray-900 to-gray-800 p-8 rounded-2xl border border-gray-700">
            <h3 class="text-2xl font-bold text-white mb-4 flex items-center">
              <svg class="w-6 h-6 text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
              Data Privacy & Security
            </h3>
            <p class="text-gray-300 mb-4">
              We maintain the highest standards of data protection and cybersecurity to safeguard our clients' information and our intellectual property.
            </p>
            <ul class="space-y-2 text-gray-400">
              <li>• GDPR and CCPA compliance</li>
              <li>• Regular security audits and assessments</li>
              <li>• Employee security training programs</li>
              <li>• Secure development practices</li>
            </ul>
          </div>
        </div>

        <div class="space-y-8">
          <div class="bg-gradient-to-br from-gray-900 to-gray-800 p-8 rounded-2xl border border-gray-700">
            <h3 class="text-2xl font-bold text-white mb-4 flex items-center">
              <svg class="w-6 h-6 text-purple-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
              Professional Development
            </h3>
            <p class="text-gray-300 mb-4">
              We invest in our team's growth through continuous learning opportunities, skill development programs, and career advancement support.
            </p>
            <ul class="space-y-2 text-gray-400">
              <li>• Annual learning and development budget</li>
              <li>• Conference and workshop attendance</li>
              <li>• Internal mentorship programs</li>
              <li>• Certification and training support</li>
            </ul>
          </div>

          <div class="bg-gradient-to-br from-gray-900 to-gray-800 p-8 rounded-2xl border border-gray-700">
            <h3 class="text-2xl font-bold text-white mb-4 flex items-center">
              <svg class="w-6 h-6 text-yellow-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Work-Life Balance
            </h3>
            <p class="text-gray-300 mb-4">
              We believe that a healthy work-life balance is essential for both personal well-being and professional success.
            </p>
            <ul class="space-y-2 text-gray-400">
              <li>• Flexible working hours and remote options</li>
              <li>• Generous vacation and personal time off</li>
              <li>• Mental health and wellness programs</li>
              <li>• Family-friendly policies and benefits</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Partners Section -->
  <section class="py-20 bg-gray-800/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-space font-bold gradient-text mb-4">Our Partners</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          We collaborate with industry leaders to deliver comprehensive solutions
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        <div class="bg-gray-900/50 backdrop-blur-sm p-8 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover-glow text-center">
          <div class="w-20 h-20 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-3">Technology Partners</h3>
          <p class="text-gray-400">
            Strategic partnerships with leading cloud providers, AI platforms, and software vendors to deliver cutting-edge solutions.
          </p>
        </div>

        <div class="bg-gray-900/50 backdrop-blur-sm p-8 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover-glow text-center">
          <div class="w-20 h-20 bg-gradient-to-r from-green-500 to-teal-500 rounded-xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-3">Industry Partners</h3>
          <p class="text-gray-400">
            Collaborations with organizations across various industries to understand sector-specific challenges and requirements.
          </p>
        </div>

        <div class="bg-gray-900/50 backdrop-blur-sm p-8 rounded-xl border border-gray-700 hover:border-blue-500 transition-all duration-300 hover-glow text-center">
          <div class="w-20 h-20 bg-gradient-to-r from-purple-500 to-pink-500 rounded-xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-3">Academic Partners</h3>
          <p class="text-gray-400">
            Partnerships with universities and research institutions to stay at the forefront of technological advancement and innovation.
          </p>
        </div>
      </div>

      <!-- Partner Logos Placeholder -->
      <div class="text-center">
        <p class="text-gray-400 mb-8">Trusted by leading organizations worldwide</p>
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8 items-center opacity-60">
          {Array.from({length: 6}).map((_, i) => (
            <div class="bg-gray-800 h-16 rounded-lg flex items-center justify-center">
              <span class="text-gray-500 font-semibold">Partner {i + 1}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Technology Stack -->
      <div class="text-center mt-20">
        <p class="text-gray-400 mb-8">Engineered using industry-leading platforms</p>
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6 items-center">
          <!-- AWS -->
          <div class="relative group bg-gray-800/50 backdrop-blur-sm p-4 rounded-lg border border-gray-700 hover:border-orange-500 transition-all duration-300 hover-glow flex items-center justify-center h-16">
            <svg class="w-8 h-8 text-orange-400" viewBox="0 0 24 24" fill="currentColor">
              <path d="M6.763 10.036c0 .296.032.535.088.71.064.176.144.368.256.576.04.063.056.127.056.192 0 .088-.056.176-.168.263l-.556.368c-.08.056-.16.08-.24.08-.096 0-.192-.048-.288-.144-.112-.12-.208-.248-.288-.384-.08-.144-.16-.304-.256-.48-.64.752-1.44 1.128-2.4 1.128-.688 0-1.239-.192-1.663-.576-.424-.384-.632-.896-.632-1.536 0-.68.24-1.231.728-1.647.488-.416 1.135-.624 1.943-.624.272 0 .552.024.848.064.296.048.6.112.912.2v-.656c0-.68-.144-1.159-.424-1.431-.288-.272-.776-.408-1.47-.408-.32 0-.648.04-.991.12-.344.08-.68.192-1.015.336-.144.064-.256.104-.32.128-.064.016-.112.024-.144.024-.128 0-.192-.096-.192-.288v-.456c0-.144.016-.256.056-.32.04-.072.112-.144.216-.2.32-.168.704-.304 1.159-.416.456-.112.943-.168 1.463-.168.112 0 .224.008.344.016 1.119.104 1.951.4 2.495.888.544.488.816 1.224.816 2.2v2.912zm-3.335 1.248c.264 0 .536-.048.824-.144.288-.096.544-.272.760-.528.128-.152.224-.32.272-.504.048-.184.08-.408.08-.672v-.32c-.24-.064-.488-.112-.744-.144-.256-.032-.504-.048-.744-.048-.528 0-.92.104-1.176.312-.256.208-.384.504-.384.888 0 .368.096.64.288.816.192.184.48.272.824.344zm6.519.416c-.16 0-.272-.032-.328-.088-.064-.056-.12-.168-.168-.328l-1.888-6.2c-.048-.16-.072-.264-.072-.32 0-.128.064-.2.192-.2h.784c.168 0 .28.032.336.088.064.056.112.168.16.328l1.352 5.336 1.256-5.336c.04-.16.096-.272.152-.328.064-.056.184-.088.352-.088h.64c.168 0 .288.032.352.088.064.056.112.168.152.328l1.272 5.4 1.392-5.4c.048-.16.104-.272.16-.328.064-.056.176-.088.336-.088h.744c.128 0 .2.064.2.2 0 .04-.008.08-.016.128-.008.048-.024.112-.048.192l-1.936 6.2c-.048.16-.104.272-.168.328-.056.056-.168.088-.328.088h-.688c-.168 0-.288-.032-.352-.088-.064-.056-.12-.168-.152-.328l-1.256-5.232-1.24 5.232c-.04.16-.096.272-.152.328-.064.056-.184.088-.352.088h-.688zm10.256.168c-.416 0-.832-.048-1.24-.144-.408-.096-.728-.2-.952-.32-.144-.072-.24-.152-.288-.232-.048-.08-.072-.168-.072-.264v-.472c0-.192.072-.288.2-.288.048 0 .096.008.152.024.056.016.136.048.24.088.336.144.696.256 1.08.336.384.08.76