        <a 
          href={`${basePath}services/`} 
          class="inline-flex items-center justify-center border-2 border-gray-300 text-gray-700 hover:border-orange-500 hover:text-orange-600 px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-200"
