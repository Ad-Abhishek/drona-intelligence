---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { bootcamps, successStories, features, faqs } from '../data/bootcamps.js';

const base = import.meta.env.BASE_URL;
// Ensure base ends with slash for proper concatenation
const basePath = base.endsWith('/') ? base : base + '/';
---

<Layout title="Bootcamps - Drona Intelligence">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-br from-gray-900 via-purple-900/20 to-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-space font-bold gradient-text mb-6">Tech Bootcamps</h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Intensive, hands-on training programs designed to accelerate your career in AI, software development, and emerging technologies
      </p>
    </div>
  </section>

  <!-- Bootcamp Programs -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-space font-bold gradient-text mb-4">Our Bootcamp Programs</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Choose from our comprehensive range of bootcamps designed for different skill levels and career goals
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {bootcamps.map((bootcamp) => (
          <div class={`bg-gradient-to-br from-gray-900 to-gray-800 p-8 rounded-2xl border border-gray-700 ${bootcamp.borderColor} transition-all duration-300 hover-glow`}>
            <div class="flex items-center mb-6">
              <div class={`w-16 h-16 bg-gradient-to-r ${bootcamp.icon.gradient} rounded-lg flex items-center justify-center mr-4`}>
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <Fragment set:html={bootcamp.icon.svg} />
                </svg>
              </div>
              <div>
                <h3 class="text-2xl font-bold text-white">{bootcamp.title}</h3>
                <p class={`${bootcamp.textColor} font-semibold`}>{bootcamp.duration} • {bootcamp.schedule}</p>
              </div>
            </div>
            
            <p class="text-gray-300 mb-6">
              {bootcamp.description}
            </p>

            <div class="mb-6">
              <h4 class="text-lg font-semibold text-white mb-3">What You'll Learn:</h4>
              <ul class="space-y-2 text-gray-300">
                {bootcamp.curriculum.map((item) => (
                  <li class="flex items-center">
                    <svg class="w-4 h-4 text-green-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    {item}
                  </li>
                ))}
              </ul>
            </div>

            <div class="flex items-center justify-between">
              <div>
                <span class="text-3xl font-bold text-white">Rs {bootcamp.price.toLocaleString()}</span>
                <span class="text-gray-400 ml-2">or Rs {bootcamp.monthlyPrice.toLocaleString()}/month</span>
              </div>
              <a 
                href="#apply" 
                class={`${bootcamp.buttonColor} text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 hover-glow`}
              >
                Apply Now
              </a>
            </div>
          </div>
        ))}

      </div>
    </div>
  </section>

  <!-- Why Choose Our Bootcamps -->
  <section class="py-20 bg-gray-800/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-space font-bold gradient-text mb-4">Why Choose Our Bootcamps?</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Our intensive programs are designed to get you job-ready in months, not years
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {features.map((feature) => (
          <div class={`bg-gray-900/50 backdrop-blur-sm p-6 rounded-xl border border-gray-700 ${feature.borderColor} transition-all duration-300 hover-glow text-center`}>
            <div class={`w-16 h-16 bg-gradient-to-r ${feature.gradient} rounded-lg flex items-center justify-center mx-auto mb-4`}>
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={feature.icon} />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-white mb-3">{feature.title}</h3>
            <p class="text-gray-400 text-sm">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Success Stories -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-space font-bold gradient-text mb-4">Success Stories</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Hear from our graduates who have transformed their careers through our bootcamp programs
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {successStories.map((story) => (
          <div class="bg-gradient-to-br from-gray-900 to-gray-800 p-8 rounded-2xl border border-gray-700">
            <div class="flex items-center mb-6">
              <div class={`w-16 h-16 bg-gradient-to-r ${story.gradient} rounded-full flex items-center justify-center mr-4`}>
                <span class="text-white font-bold text-xl">{story.initials}</span>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-white">{story.name}</h4>
                <p class={story.textColor}>{story.position}</p>
              </div>
            </div>
            <p class="text-gray-300 mb-4">
              "{story.testimonial}"
            </p>
            <div class="text-yellow-400 text-sm">
              ★★★★★ {story.bootcamp}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Application Process -->
  <section id="apply" class="py-20 bg-gray-800/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-space font-bold gradient-text mb-4">Application Process</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Ready to start your tech career? Here's how to apply for our bootcamp programs
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-16">
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">1</span>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Apply Online</h3>
          <p class="text-gray-400 text-sm">Submit your application and tell us about your background and goals.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">2</span>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Technical Assessment</h3>
          <p class="text-gray-400 text-sm">Complete a brief technical assessment to evaluate your current skill level.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-teal-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">3</span>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Interview</h3>
          <p class="text-gray-400 text-sm">Have a conversation with our admissions team about your career goals.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-orange-500 to-red-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">4</span>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Start Learning</h3>
          <p class="text-gray-400 text-sm">Get accepted and begin your journey to a new career in tech!</p>
        </div>
      </div>

      <!-- Application Form -->
      <div class="max-w-2xl mx-auto">
        <div class="bg-gradient-to-br from-gray-900 to-gray-800 p-8 rounded-2xl border border-gray-700">
          <h3 class="text-2xl font-bold text-white mb-6 text-center">Apply Now</h3>
          
          <form 
            action="https://formspree.io/f/mqarjyaq" 
            method="POST" 
            class="space-y-6"
            id="bootcamp-application-form"
          >
            <!-- Hidden field to identify form type -->
            <input type="hidden" name="form_type" value="bootcamp_application">
            <input type="hidden" name="_to" value="dronaintelligence@gmail.com">
            <input type="hidden" name="_subject" value="New Bootcamp Application">
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">First Name</label>
                <input 
                  type="text" 
                  name="first_name"
                  required
                  class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white focus:border-blue-500 focus:outline-none"
                  placeholder="Enter your first name"
                >
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">Last Name</label>
                <input 
                  type="text" 
                  name="last_name"
                  required
                  class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white focus:border-blue-500 focus:outline-none"
                  placeholder="Enter your last name"
                >
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Email Address</label>
              <input 
                type="email" 
                name="email"
                required
                class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white focus:border-blue-500 focus:outline-none"
                placeholder="Enter your email address"
              >
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Phone Number</label>
              <input 
                type="tel" 
                name="phone"
                required
                class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white focus:border-blue-500 focus:outline-none"
                placeholder="Enter your phone number"
              >
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Preferred Bootcamp</label>
              <select 
                name="preferred_bootcamp"
                required
                class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white focus:border-blue-500 focus:outline-none"
              >
                <option value="">Select a bootcamp program</option>
                {bootcamps.map((bootcamp) => (
                  <option value={bootcamp.id}>{bootcamp.title}</option>
                ))}
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Current Experience Level</label>
              <select 
                name="experience_level"
                required
                class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white focus:border-blue-500 focus:outline-none"
              >
                <option value="">Select your experience level</option>
                <option value="beginner">Beginner (No prior experience)</option>
                <option value="some">Some experience (Self-taught/courses)</option>
                <option value="intermediate">Intermediate (Some professional experience)</option>
                <option value="career-change">Career change (Experience in other field)</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Why are you interested in this bootcamp?</label>
              <textarea 
                rows="4" 
                name="motivation"
                required
                class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white focus:border-blue-500 focus:outline-none"
                placeholder="Tell us about your goals and motivation..."
              ></textarea>
            </div>

            <div class="text-center">
              <button 
                type="submit" 
                class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 hover-glow transform hover:scale-105"
                id="submit-btn"
              >
                Submit Application
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-space font-bold gradient-text mb-4">Frequently Asked Questions</h2>
        <p class="text-xl text-gray-300">
          Get answers to common questions about our bootcamp programs
        </p>
      </div>

      <div class="space-y-4">
        {faqs.map((faq, index) => (
          <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-xl border border-gray-700 overflow-hidden">
            <button 
              class="w-full px-6 py-4 text-left flex items-center justify-between hover:bg-gray-800/50 transition-colors duration-200 faq-toggle"
              data-faq={index}
            >
              <h3 class="text-lg font-semibold text-white pr-4">{faq.question}</h3>
              <svg 
                class="w-5 h-5 text-gray-400 transform transition-transform duration-200 faq-icon"
                fill="none" 
                stroke="currentColor" 
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="faq-content max-h-0 overflow-hidden transition-all duration-300 ease-in-out">
              <div class="px-6 pb-4">
                <p class="text-gray-300 leading-relaxed">
                  {faq.answer}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-blue-900/50 to-purple-900/50">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-space font-bold text-white mb-6">
        Ready to Transform Your Career?
      </h2>
      <p class="text-xl text-gray-300 mb-8">
        Join thousands of successful graduates who have launched their tech careers through our bootcamp programs
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="#apply" 
          class="bg-white text-gray-900 hover:bg-gray-100 px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-105"
        >
          Apply Now
        </a>
        <a 
          href="https://calendly.com/dronaintelligence/30min" 
          class="border border-white text-white hover:bg-white hover:text-gray-900 px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-105"
        >
          Schedule Info Session
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  // Bootcamp form submission handling
  document.getElementById('bootcamp-application-form').addEventListener('submit', function(e) {
    const submitBtn = document.getElementById('submit-btn');
    submitBtn.textContent = 'Submitting...';
    submitBtn.disabled = true;
    
    // Show success message after form submission
    setTimeout(() => {
      // This will be handled by Formspree's redirect or you can customize
      alert('Thank you for your application! We will review it and get back to you soon.');
    }, 1000);
  });

  // Handle form success (if using Formspree's AJAX submission)
  window.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('bootcamp-application-form');
    
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const formData = new FormData(form);
      const submitBtn = document.getElementById('submit-btn');
      
      try {
        submitBtn.textContent = 'Submitting...';
        submitBtn.disabled = true;
        
        const response = await fetch(form.action, {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        });
        
        if (response.ok) {
          // Success
          form.reset();
          submitBtn.textContent = 'Application Submitted!';
          submitBtn.classList.remove('bg-blue-600', 'hover:bg-blue-700');
          submitBtn.classList.add('bg-green-600');
          
          // Show success message
          const successDiv = document.createElement('div');
          successDiv.className = 'mt-4 p-4 bg-green-900/50 border border-green-500 rounded-lg text-green-400 text-center';
          successDiv.innerHTML = `
            <div class="flex items-center justify-center mb-2">
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Application Submitted Successfully!
            </div>
            <p class="text-sm">Thank you for your interest in our bootcamp program. We'll review your application and get back to you within 2-3 business days.</p>
          `;
          form.parentNode.appendChild(successDiv);
          
          // Reset button after 3 seconds
          setTimeout(() => {
            submitBtn.textContent = 'Submit Application';
            submitBtn.disabled = false;
            submitBtn.classList.remove('bg-green-600');
            submitBtn.classList.add('bg-blue-600', 'hover:bg-blue-700');
          }, 3000);
          
        } else {
          throw new Error('Form submission failed');
        }
        
      } catch (error) {
        // Error handling
        submitBtn.textContent = 'Submission Failed - Try Again';
        submitBtn.disabled = false;
        submitBtn.classList.remove('bg-blue-600');
        submitBtn.classList.add('bg-red-600', 'hover:bg-red-700');
        
        // Reset button after 3 seconds
        setTimeout(() => {
          submitBtn.textContent = 'Submit Application';
          submitBtn.classList.remove('bg-red-600', 'hover:bg-red-700');
          submitBtn.classList.add('bg-blue-600', 'hover:bg-blue-700');
        }, 3000);
      }
    });
  });

  // FAQ Accordion functionality
  document.addEventListener('DOMContentLoaded', function() {
    const faqToggles = document.querySelectorAll('.faq-toggle');
    
    faqToggles.forEach(toggle => {
      toggle.addEventListener('click', function() {
        const faqIndex = this.getAttribute('data-faq');
        const content = this.nextElementSibling;
        const icon = this.querySelector('.faq-icon');
        
        // Close all other FAQs
        faqToggles.forEach((otherToggle, index) => {
          if (otherToggle !== this) {
            const otherContent = otherToggle.nextElementSibling;
            const otherIcon = otherToggle.querySelector('.faq-icon');
            otherContent.style.maxHeight = '0px';
            otherIcon.style.transform = 'rotate(0deg)';
          }
        });
        
        // Toggle current FAQ
        if (content.style.maxHeight && content.style.maxHeight !== '0px') {
          // Close
          content.style.maxHeight = '0px';
          icon.style.transform = 'rotate(0deg)';
        } else {
          // Open
          content.style.maxHeight = content.scrollHeight + 'px';
          icon.style.transform = 'rotate(180deg)';
        }
      });
    });
  });
</script>