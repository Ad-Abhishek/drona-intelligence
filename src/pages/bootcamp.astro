<script>
  // Form submission
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('bootcamp-application-form');
    const submitBtn = document.getElementById('submit-btn');
    
    if (form && submitBtn) {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const formData = new FormData(form);
        
        try {
          submitBtn.innerHTML = '<span>Submitting...</span>';
          submitBtn.disabled = true;
          
          const response = await fetch(form.action, {
            method: 'POST',
            body: formData,
            headers: {
              'Accept': 'application/json'
            }
          });
          
          if (response.ok) {
            form.reset();
            submitBtn.innerHTML = '‚úì Application Submitted!';
            submitBtn.classList.remove('from-orange-500', 'to-red-500');
            submitBtn.classList.add('from-green-500', 'to-green-600');
            
            setTimeout(() => {
              submitBtn.innerHTML = 'Submit Application <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg>';
              submitBtn.disabled = false;
              submitBtn.classList.remove('from-green-500', 'to-green-600');
              submitBtn.classList.add('from-orange-500', 'to-red-500');
            }, 3000);
          } else {
            throw new Error('Submission failed');
          }
        } catch (error) {
          submitBtn.innerHTML = 'Failed - Try Again';
          submitBtn.disabled = false;
        }
      });
    }

    // FAQ Accordion
    const faqToggles = document.querySelectorAll('.faq-toggle');
    
    faqToggles.forEach(toggle => {
      toggle.addEventListener('click', function() {
        const content = this.nextElementSibling;
        const icon = this.querySelector('.faq-icon');
        
        // Close all other FAQs
        faqToggles.forEach((otherToggle) => {
          if (otherToggle !== this) {
            const otherContent = otherToggle.nextElementSibling;
            const otherIcon = otherToggle.querySelector('.faq-icon');
            otherContent.style.maxHeight = '0px';
            otherIcon.style.transform = 'rotate(0deg)';
          }
        });
        
        // Toggle current FAQ
        if (content.style.maxHeight && content.style.maxHeight !== '0px') {
          content.style.maxHeight = '0px';
          icon.style.transform = 'rotate(0deg)';
        } else {
          content.style.maxHeight = content.scrollHeight + 'px';
          icon.style.transform = 'rotate(180deg)';
        }
      });
    });
  });
</script>
