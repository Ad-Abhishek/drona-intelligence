---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL;
const basePath = base.endsWith('/') ? base : base + '/';
---

<Layout title="Drona Intelligence - AI & Software Solutions">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 px-4 sm:px-6 lg:px-8 overflow-hidden bg-gradient-to-br from-orange-50 via-white to-red-50">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="animate-fade-in">
          <div class="inline-flex items-center px-4 py-2 bg-orange-100 rounded-full mb-6">
            <span class="text-orange-700 text-sm font-semibold">ðŸš€ Transforming Ideas into Reality</span>
          </div>
          <h1 class="text-5xl lg:text-6xl font-sora font-bold mb-6 text-gray-900 leading-tight">
            Build the Future with
            <span class="gradient-text block mt-2">AI & Innovation</span>
          </h1>
          <p class="text-xl text-gray-600 mb-8 leading-relaxed">
            We craft intelligent software solutions that drive growth, streamline operations, and unlock new possibilities for your business.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a 
              href={`${basePath}services/`} 
              class="inline-flex items-center justify-center bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-200 shadow-lg hover:shadow-xl"
            >
              Explore Services
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
            <a 
              href="https://calendly.com/dronaintelligence/30min" 
              class="inline-flex items-center justify-center border-2 border-gray-300 text-gray-700 hover:border-orange-500 hover:text-orange-600 px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-200"
            >
              Book a Call
            </a>
          </div>
        </div>
        
        <div class="relative hidden lg:block">
          <div class="relative z-10">
            <div class="bg-white rounded-2xl shadow-2xl p-8 border border-gray-100">
              <div class="space-y-4">
                <div class="flex items-center space-x-3">
                  <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-gray-500">Project Completed</p>
                    <p class="text-2xl font-bold text-gray-900">50+</p>
                  </div>
                </div>
                <div class="flex items-center space-x-3">
                  <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-gray-500">Happy Clients</p>
                    <p class="text-2xl font-bold text-gray-900">30+</p>
                  </div>
                </div>
                <div class="flex items-center space-x-3">
                  <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-gray-500">Years Experience</p>
                    <p class="text-2xl font-bold text-gray-900">5+</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="absolute -top-4 -right-4 w-72 h-72 bg-orange-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-pulse"></div>
          <div class="absolute -bottom-4 -left-4 w-72 h-72 bg-red-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-pulse" style="animation-delay: 2s;"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-white relative overflow-hidden">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-sora font-bold text-gray-900 mb-4">Why Partner With Us?</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          We combine technical expertise with business acumen to deliver solutions that matter
        </p>
      </div>

      <!-- Curved Path Design -->
      <div class="relative">
        <!-- SVG Curved Path -->
        <svg class="absolute inset-0 w-full h-full hidden lg:block" viewBox="0 0 1200 600" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M 100 300 Q 400 100, 600 300 T 1100 300" stroke="url(#gradient)" stroke-width="3" fill="none" stroke-dasharray="10 5" opacity="0.3"/>
          <defs>
            <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="0%">
              <stop offset="0%" style="stop-color:#f97316;stop-opacity:1" />
              <stop offset="50%" style="stop-color:#dc2626;stop-opacity:1" />
              <stop offset="100%" style="stop-color:#f97316;stop-opacity:1" />
            </linearGradient>
          </defs>
        </svg>

        <!-- Feature Cards on Path -->
        <div class="relative grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12">
          <!-- Feature 1 - Top Left -->
          <div class="feature-card-animate" style="animation-delay: 0.2s;">
            <div class="relative">
              <!-- Connecting Dot -->
              <div class="absolute -top-8 left-1/2 transform -translate-x-1/2 hidden lg:block">
                <div class="w-6 h-6 bg-gradient-to-r from-orange-500 to-red-500 rounded-full animate-pulse shadow-lg"></div>
              </div>
              
              <div class="bg-white p-8 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 border-2 border-orange-100 hover:border-orange-300 group">
                <div class="flex flex-col items-center text-center">
                  <!-- Animated Icon Container -->
                  <div class="relative mb-6">
                    <div class="absolute inset-0 bg-orange-500 rounded-2xl blur-xl opacity-20 group-hover:opacity-40 transition-opacity duration-300"></div>
                    <div class="relative w-20 h-20 bg-gradient-to-br from-orange-500 to-red-500 rounded-2xl flex items-center justify-center transform group-hover:scale-110 group-hover:rotate-3 transition-all duration-300">
                      <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 9h6m-6 3h6"></path>
                      </svg>
                    </div>
                  </div>
                  
                  <div class="inline-flex items-center px-3 py-1 bg-orange-100 rounded-full mb-4">
                    <span class="text-orange-700 text-xs font-semibold">STEP 01</span>
                  </div>
                  
                  <h3 class="text-2xl font-sora font-bold text-gray-900 mb-4">AI-Powered Solutions</h3>
                  <p class="text-gray-600 leading-relaxed">
                    Leverage cutting-edge AI and machine learning to automate workflows, extract insights, and make data-driven decisions.
                  </p>
                  
                  <!-- Decorative Element -->
                  <div class="mt-6 flex items-center justify-center space-x-1">
                    <div class="w-2 h-2 bg-orange-500 rounded-full animate-bounce"></div>
                    <div class="w-2 h-2 bg-orange-500 rounded-full animate-bounce" style="animation-delay: 0.1s;"></div>
                    <div class="w-2 h-2 bg-orange-500 rounded-full animate-bounce" style="animation-delay: 0.2s;"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Feature 2 - Center Bottom -->
          <div class="feature-card-animate lg:mt-16" style="animation-delay: 0.4s;">
            <div class="relative">
              <!-- Connecting Dot -->
              <div class="absolute -top-8 left-1/2 transform -translate-x-1/2 hidden lg:block">
                <div class="w-6 h-6 bg-gradient-to-r from-red-500 to-orange-500 rounded-full animate-pulse shadow-lg" style="animation-delay: 0.5s;"></div>
              </div>
              
              <div class="bg-white p-8 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 border-2 border-red-100 hover:border-red-300 group">
                <div class="flex flex-col items-center text-center">
                  <!-- Animated Icon Container -->
                  <div class="relative mb-6">
                    <div class="absolute inset-0 bg-red-500 rounded-2xl blur-xl opacity-20 group-hover:opacity-40 transition-opacity duration-300"></div>
                    <div class="relative w-20 h-20 bg-gradient-to-br from-red-500 to-orange-500 rounded-2xl flex items-center justify-center transform group-hover:scale-110 group-hover:rotate-3 transition-all duration-300">
                      <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                      </svg>
                    </div>
                  </div>
                  
                  <div class="inline-flex items-center px-3 py-1 bg-red-100 rounded-full mb-4">
                    <span class="text-red-700 text-xs font-semibold">STEP 02</span>
                  </div>
                  
                  <h3 class="text-2xl font-sora font-bold text-gray-900 mb-4">Custom Development</h3>
                  <p class="text-gray-600 leading-relaxed">
                    Tailored software built with modern tech stacks to perfectly fit your unique business requirements and scale with you.
                  </p>
                  
                  <!-- Decorative Element -->
                  <div class="mt-6 flex items-center justify-center space-x-1">
                    <div class="w-2 h-2 bg-red-500 rounded-full animate-bounce"></div>
                    <div class="w-2 h-2 bg-red-500 rounded-full animate-bounce" style="animation-delay: 0.1s;"></div>
                    <div class="w-2 h-2 bg-red-500 rounded-full animate-bounce" style="animation-delay: 0.2s;"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Feature 3 - Top Right -->
          <div class="feature-card-animate" style="animation-delay: 0.6s;">
            <div class="relative">
              <!-- Connecting Dot -->
              <div class="absolute -top-8 left-1/2 transform -translate-x-1/2 hidden lg:block">
                <div class="w-6 h-6 bg-gradient-to-r from-amber-500 to-orange-500 rounded-full animate-pulse shadow-lg" style="animation-delay: 1s;"></div>
              </div>
              
              <div class="bg-white p-8 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 border-2 border-amber-100 hover:border-amber-300 group">
                <div class="flex flex-col items-center text-center">
                  <!-- Animated Icon Container -->
                  <div class="relative mb-6">
                    <div class="absolute inset-0 bg-amber-500 rounded-2xl blur-xl opacity-20 group-hover:opacity-40 transition-opacity duration-300"></div>
                    <div class="relative w-20 h-20 bg-gradient-to-br from-amber-500 to-orange-500 rounded-2xl flex items-center justify-center transform group-hover:scale-110 group-hover:rotate-3 transition-all duration-300">
                      <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6"></path>
                      </svg>
                    </div>
                  </div>
                  
                  <div class="inline-flex items-center px-3 py-1 bg-amber-100 rounded-full mb-4">
                    <span class="text-amber-700 text-xs font-semibold">STEP 03</span>
                  </div>
                  
                  <h3 class="text-2xl font-sora font-bold text-gray-900 mb-4">Training & Bootcamps</h3>
                  <p class="text-gray-600 leading-relaxed">
                    Comprehensive training programs to upskill your team with the latest technologies and industry best practices.
                  </p>
                  
                  <!-- Decorative Element -->
                  <div class="mt-6 flex items-center justify-center space-x-1">
                    <div class="w-2 h-2 bg-amber-500 rounded-full animate-bounce"></div>
                    <div class="w-2 h-2 bg-amber-500 rounded-full animate-bounce" style="animation-delay: 0.1s;"></div>
                    <div class="w-2 h-2 bg-amber-500 rounded-full animate-bounce" style="animation-delay: 0.2s;"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Floating Particles -->
        <div class="absolute top-10 left-10 w-3 h-3 bg-orange-300 rounded-full animate-float opacity-60"></div>
        <div class="absolute top-32 right-20 w-2 h-2 bg-red-300 rounded-full animate-float opacity-60" style="animation-delay: 1s;"></div>
        <div class="absolute bottom-20 left-32 w-4 h-4 bg-amber-300 rounded-full animate-float opacity-60" style="animation-delay: 2s;"></div>
      </div>
    </div>
  </section>

  <!-- Services Preview -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gray-50">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-sora font-bold text-gray-900 mb-4">Our Services</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          End-to-end technology solutions designed to accelerate your digital transformation
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-xl border border-gray-200 card-hover">
          <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">AI Integration</h3>
          <p class="text-gray-600 text-sm">Seamlessly integrate AI capabilities into your existing systems and workflows</p>
        </div>

        <div class="bg-white p-6 rounded-xl border border-gray-200 card-hover">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Web Development</h3>
          <p class="text-gray-600 text-sm">Modern, responsive web applications built with cutting-edge technologies</p>
        </div>

        <div class="bg-white p-6 rounded-xl border border-gray-200 card-hover">
          <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Mobile Apps</h3>
          <p class="text-gray-600 text-sm">Native and cross-platform mobile applications for iOS and Android</p>
        </div>

        <div class="bg-white p-6 rounded-xl border border-gray-200 card-hover">
          <div class="w-12 h-12 bg-rose-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">UI/UX Design</h3>
          <p class="text-gray-600 text-sm">User-centered design that creates engaging digital experiences</p>
        </div>

        <div class="bg-white p-6 rounded-xl border border-gray-200 card-hover">
          <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Business Intelligence</h3>
          <p class="text-gray-600 text-sm">Data-driven insights to make informed business decisions</p>
        </div>

        <div class="bg-white p-6 rounded-xl border border-gray-200 card-hover">
          <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Consulting</h3>
          <p class="text-gray-600 text-sm">Strategic technology consulting to accelerate your digital transformation</p>
        </div>
      </div>

      <div class="text-center mt-12">
        <a 
          href={`${basePath}services/`} 
          class="inline-flex items-center bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white px-8 py-3 rounded-xl font-semibold transition-all duration-200 shadow-lg hover:shadow-xl"
        >
          View All Services
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-r from-orange-500 to-red-500">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl lg:text-5xl font-sora font-bold text-white mb-6">
        Ready to Transform Your Business?
      </h2>
      <p class="text-xl text-orange-100 mb-8">
        Let's discuss how our AI and software solutions can drive your success
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="https://calendly.com/dronaintelligence/30min" 
          class="inline-flex items-center justify-center bg-white text-orange-600 hover:bg-gray-100 px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-200 shadow-lg hover:shadow-xl"
        >
          Schedule Consultation
        </a>
        <a 
          href={`${basePath}bootcamp/`} 
          class="inline-flex items-center justify-center border-2 border-white text-white hover:bg-white hover:text-orange-600 px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-200"
        >
          Explore Bootcamps
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
