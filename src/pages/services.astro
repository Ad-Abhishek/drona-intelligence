---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL;
const basePath = base.endsWith('/') ? base : base + '/';
---

<Layout title="Services - Drona Intelligence">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="pt-32 pb-12 px-4 sm:px-6 lg:px-8 bg-white">
    <div class="max-w-7xl mx-auto">
      <div class="mb-4">
        <span class="text-orange-600 text-sm font-semibold tracking-wider uppercase">What We Do</span>
      </div>
      <h1 class="text-6xl lg:text-8xl font-sora font-bold text-gray-900 mb-8 leading-none">
        Services
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl">
        Intelligence-driven solutions that power your digital transformation
      </p>
    </div>
  </section>

  <!-- Brain-Centered Services Layout -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-white to-orange-50/30">
    <div class="max-w-7xl mx-auto">
      <div class="relative min-h-[1000px] lg:min-h-[900px]">
        
        <!-- Central Brain Illustration -->
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-10">
          <div class="relative w-64 h-64 lg:w-80 lg:h-80">
            <!-- Brain SVG -->
            <svg class="w-full h-full text-orange-500/20 animate-pulse-slow" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C10.07 2 8.5 3.57 8.5 5.5c0 .55.13 1.07.35 1.54C7.4 7.59 6.5 8.71 6.5 10c0 .34.06.67.17.97C5.38 11.44 4.5 12.61 4.5 14c0 1.93 1.57 3.5 3.5 3.5.34 0 .67-.05.98-.14.31.59.77 1.07 1.33 1.39-.09.32-.14.66-.14 1.01 0 1.93 1.57 3.5 3.5 3.5s3.5-1.57 3.5-3.5c0-.35-.05-.69-.14-1.01.56-.32 1.02-.8 1.33-1.39.31.09.64.14.98.14 1.93 0 3.5-1.57 3.5-3.5 0-1.39-.88-2.56-2.17-3.03.11-.3.17-.63.17-.97 0-1.29-.9-2.41-2.35-2.96.22-.47.35-.99.35-1.54C15.5 3.57 13.93 2 12 2zm0 2c.83 0 1.5.67 1.5 1.5S12.83 7 12 7s-1.5-.67-1.5-1.5S11.17 4 12 4zm-3.5 6c.83 0 1.5.67 1.5 1.5S9.33 13 8.5 13 7 12.33 7 11.5 7.67 10 8.5 10zm7 0c.83 0 1.5.67 1.5 1.5s-.67 1.5-1.5 1.5-1.5-.67-1.5-1.5.67-1.5 1.5-1.5zM8 15.5c.83 0 1.5.67 1.5 1.5S8.83 18.5 8 18.5 6.5 17.83 6.5 17 7.17 15.5 8 15.5zm8 0c.83 0 1.5.67 1.5 1.5s-.67 1.5-1.5 1.5-1.5-.67-1.5-1.5.67-1.5 1.5-1.5zm-4 2c.83 0 1.5.67 1.5 1.5s-.67 1.5-1.5 1.5-1.5-.67-1.5-1.5.67-1.5 1.5-1.5z"/>
            </svg>
            
            <!-- Glowing effect -->
            <div class="absolute inset-0 bg-gradient-to-br from-orange-400/20 to-red-500/20 rounded-full blur-3xl"></div>
            
            <!-- Center text -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center">
                <div class="text-4xl lg:text-5xl font-sora font-bold text-gray-900 mb-2">Drona</div>
                <div class="text-sm text-orange-600 font-semibold tracking-wider">INTELLIGENCE</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Orbiting Services -->
        
        <!-- AI Integration - Top -->
        <div class="absolute top-0 left-1/2 transform -translate-x-1/2 service-orbit" style="animation-delay: 0s;">
          <div class="group cursor-pointer">
            <div class="bg-gradient-to-br from-orange-500 to-red-600 rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 w-64">
              <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-white/20 backdrop-blur-sm rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-sora font-bold text-white">AI Integration</h3>
              </div>
              <p class="text-white/90 text-sm leading-relaxed">Custom AI solutions that automate workflows and unlock insights</p>
            </div>
            <div class="w-0.5 h-16 bg-gradient-to-b from-orange-300 to-transparent mx-auto"></div>
          </div>
        </div>

        <!-- Web Development - Top Right -->
        <div class="absolute top-12 right-8 lg:right-20 service-orbit" style="animation-delay: 0.2s;">
          <div class="group cursor-pointer">
            <div class="bg-white border-2 border-orange-200 rounded-2xl p-6 shadow-lg hover:shadow-xl hover:border-orange-400 transition-all duration-300 hover:scale-105 w-56">
              <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-gradient-to-br from-orange-400 to-red-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-sora font-bold text-gray-900">Web Development</h3>
              </div>
              <p class="text-gray-600 text-sm leading-relaxed">Modern web apps built for speed and scale</p>
            </div>
            <div class="w-0.5 h-12 bg-gradient-to-b from-orange-200 to-transparent ml-6"></div>
          </div>
        </div>

        <!-- Mobile Apps - Right -->
        <div class="absolute top-1/2 right-0 lg:right-8 transform -translate-y-1/2 service-orbit" style="animation-delay: 0.4s;">
          <div class="group cursor-pointer">
            <div class="flex items-center gap-4">
              <div class="w-0.5 h-12 bg-gradient-to-r from-transparent to-orange-200"></div>
              <div class="bg-gradient-to-br from-amber-500 to-orange-600 rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 w-56">
                <div class="flex items-center gap-3 mb-3">
                  <div class="w-10 h-10 bg-white/20 backdrop-blur-sm rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <h3 class="text-lg font-sora font-bold text-white">Mobile Apps</h3>
                </div>
                <p class="text-white/90 text-sm leading-relaxed">Native iOS & Android experiences</p>
              </div>
            </div>
          </div>
        </div>

        <!-- UI/UX Design - Bottom Right -->
        <div class="absolute bottom-24 right-12 lg:right-24 service-orbit" style="animation-delay: 0.6s;">
          <div class="group cursor-pointer">
            <div class="w-0.5 h-12 bg-gradient-to-t from-orange-200 to-transparent ml-6"></div>
            <div class="bg-white border-2 border-orange-200 rounded-2xl p-6 shadow-lg hover:shadow-xl hover:border-orange-400 transition-all duration-300 hover:scale-105 w-56">
              <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-gradient-to-br from-rose-400 to-orange-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-sora font-bold text-gray-900">UI/UX Design</h3>
              </div>
              <p class="text-gray-600 text-sm leading-relaxed">Beautiful interfaces users love</p>
            </div>
          </div>
        </div>

        <!-- Cloud Solutions - Bottom -->
        <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 service-orbit" style="animation-delay: 0.8s;">
          <div class="group cursor-pointer">
            <div class="w-0.5 h-16 bg-gradient-to-t from-orange-300 to-transparent mx-auto"></div>
            <div class="bg-gradient-to-br from-orange-400 to-red-500 rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 w-64">
              <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-white/20 backdrop-blur-sm rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-sora font-bold text-white">Cloud Solutions</h3>
              </div>
              <p class="text-white/90 text-sm leading-relaxed">Scalable infrastructure that grows with you</p>
            </div>
          </div>
        </div>

        <!-- Business Intelligence - Bottom Left -->
        <div class="absolute bottom-24 left-12 lg:left-24 service-orbit" style="animation-delay: 1s;">
          <div class="group cursor-pointer">
            <div class="w-0.5 h-12 bg-gradient-to-t from-orange-200 to-transparent ml-6"></div>
            <div class="bg-white border-2 border-orange-200 rounded-2xl p-6 shadow-lg hover:shadow-xl hover:border-orange-400 transition-all duration-300 hover:scale-105 w-56">
              <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-gradient-to-br from-amber-400 to-orange-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-sora font-bold text-gray-900">Business Intelligence</h3>
              </div>
              <p class="text-gray-600 text-sm leading-relaxed">Data-driven insights and analytics</p>
            </div>
          </div>
        </div>

        <!-- IT Solutions - Left -->
        <div class="absolute top-1/2 left-0 lg:left-8 transform -translate-y-1/2 service-orbit" style="animation-delay: 1.2s;">
          <div class="group cursor-pointer">
            <div class="flex items-center gap-4">
              <div class="bg-gradient-to-br from-orange-500 to-red-600 rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 w-56">
                <div class="flex items-center gap-3 mb-3">
                  <div class="w-10 h-10 bg-white/20 backdrop-blur-sm rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
                    </svg>
                  </div>
                  <h3 class="text-lg font-sora font-bold text-white">IT Solutions</h3>
                </div>
                <p class="text-white/90 text-sm leading-relaxed">Infrastructure & support services</p>
              </div>
              <div class="w-0.5 h-12 bg-gradient-to-l from-transparent to-orange-200"></div>
            </div>
          </div>
        </div>

        <!-- Consulting - Top Left -->
        <div class="absolute top-12 left-8 lg:left-20 service-orbit" style="animation-delay: 1.4s;">
          <div class="group cursor-pointer">
            <div class="bg-white border-2 border-orange-200 rounded-2xl p-6 shadow-lg hover:shadow-xl hover:border-orange-400 transition-all duration-300 hover:scale-105 w-56">
              <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-gradient-to-br from-orange-400 to-red-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-sora font-bold text-gray-900">Consulting</h3>
              </div>
              <p class="text-gray-600 text-sm leading-relaxed">Strategic technology guidance</p>
            </div>
            <div class="w-0.5 h-12 bg-gradient-to-b from-orange-200 to-transparent ml-6"></div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- How We Work Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gray-900">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <span class="text-orange-500 text-sm font-semibold tracking-wider uppercase mb-4 block">Our Approach</span>
          <h2 class="text-4xl lg:text-6xl font-sora font-bold text-white mb-6 leading-tight">
            We don't just build software. We solve problems.
          </h2>
          <p class="text-gray-400 text-lg leading-relaxed mb-8">
            Every project starts with understanding your unique challenges. We dig deep, ask the right questions, and craft solutions that actually move the needle for your business.
          </p>
          <a 
            href="https://calendly.com/dronaintelligence/30min" 
            class="inline-flex items-center gap-2 bg-gradient-to-r from-orange-500 to-red-500 text-white px-8 py-4 rounded-xl font-semibold transition-all duration-200 hover:shadow-2xl hover:shadow-orange-500/50"
          >
            Let's Talk About Your Project
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>

        <div class="space-y-6">
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-orange-500/10 rounded-xl flex items-center justify-center">
              <span class="text-orange-500 font-bold text-xl">1</span>
            </div>
            <div>
              <h3 class="text-xl font-sora font-bold text-white mb-2">Listen & Learn</h3>
              <p class="text-gray-400">We start by understanding your business, your users, and your goals.</p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-orange-500/10 rounded-xl flex items-center justify-center">
              <span class="text-orange-500 font-bold text-xl">2</span>
            </div>
            <div>
              <h3 class="text-xl font-sora font-bold text-white mb-2">Design & Prototype</h3>
              <p class="text-gray-400">Quick iterations to validate ideas before writing a single line of code.</p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-orange-500/10 rounded-xl flex items-center justify-center">
              <span class="text-orange-500 font-bold text-xl">3</span>
            </div>
            <div>
              <h3 class="text-xl font-sora font-bold text-white mb-2">Build & Test</h3>
              <p class="text-gray-400">Agile development with continuous feedback and quality assurance.</p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-orange-500/10 rounded-xl flex items-center justify-center">
              <span class="text-orange-500 font-bold text-xl">4</span>
            </div>
            <div>
              <h3 class="text-xl font-sora font-bold text-white mb-2">Launch & Grow</h3>
              <p class="text-gray-400">Smooth deployment and ongoing support to ensure long-term success.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-white">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl lg:text-6xl font-sora font-bold text-gray-900 mb-6 leading-tight">
        Ready to start building?
      </h2>
      <p class="text-xl text-gray-600 mb-10">
        Book a free consultation and let's explore what we can create together.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="https://calendly.com/dronaintelligence/30min" 
          class="inline-flex items-center justify-center bg-gradient-to-r from-orange-500 to-red-500 text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-200 hover:shadow-2xl hover:shadow-orange-500/30"
        >
          Schedule a Call
        </a>
        <a 
          href={`${basePath}about/`} 
          class="inline-flex items-center justify-center border-2 border-gray-300 text-gray-700 hover:border-orange-500 hover:text-orange-600 px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-200"
        >
          Learn About Us
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 0.3; }
  }

  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }

  @keyframes fade-in-orbit {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .service-orbit {
    opacity: 0;
    animation: fade-in-orbit 0.6s ease-out forwards;
  }
</style>
