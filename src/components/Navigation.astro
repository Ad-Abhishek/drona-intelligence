---
const currentPath = Astro.url.pathname;
---

<nav class="fixed top-0 w-full z-50 bg-gray-900/80 backdrop-blur-md border-b border-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2 group">
          <div class="w-14 h-14 bg-gradient-to-r rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <img src="./di-logo.png" />
          </div>
         <!-- <span class="font-space font-bold text-xl gradient-text">Drona Intelligence</span> -->
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a 
            href="/" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-all duration-300 hover:text-blue-400 hover:bg-gray-800/50 ${currentPath === '/' ? 'text-blue-400 bg-gray-800/50' : 'text-gray-300'}`}
          >
            Home
          </a>
          <a 
            href="/services" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-all duration-300 hover:text-blue-400 hover:bg-gray-800/50 ${currentPath === '/services' ? 'text-blue-400 bg-gray-800/50' : 'text-gray-300'}`}
          >
            Services
          </a>
          <a 
            href="/career" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-all duration-300 hover:text-blue-400 hover:bg-gray-800/50 ${currentPath === '/career' ? 'text-blue-400 bg-gray-800/50' : 'text-gray-300'}`}
          >
            Career
          </a>
          <a 
            href="/about" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-all duration-300 hover:text-blue-400 hover:bg-gray-800/50 ${currentPath === '/about' ? 'text-blue-400 bg-gray-800/50' : 'text-gray-300'}`}
          >
            About Us
          </a>
          <a 
            href="/bootcamp" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-all duration-300 hover:text-blue-400 hover:bg-gray-800/50 ${currentPath === '/bootcamp' ? 'text-blue-400 bg-gray-800/50' : 'text-gray-300'}`}
          >
            Bootcamp
          </a>
          <a 
            href="https://calendly.com/dronaintelligence/30min" 
            class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md text-sm font-medium text-white transition-all duration-300 hover-glow"
          >
            Book Appointment
          </a>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button 
          type="button" 
          class="mobile-menu-button bg-gray-800 inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
          aria-controls="mobile-menu" 
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="mobile-menu hidden md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-gray-800/95 backdrop-blur-md">
      <a href="/" class="text-gray-300 hover:text-blue-400 block px-3 py-2 rounded-md text-base font-medium">Home</a>
      <a href="/services" class="text-gray-300 hover:text-blue-400 block px-3 py-2 rounded-md text-base font-medium">Services</a>
      <a href="/career" class="text-gray-300 hover:text-blue-400 block px-3 py-2 rounded-md text-base font-medium">Career</a>
      <a href="/about" class="text-gray-300 hover:text-blue-400 block px-3 py-2 rounded-md text-base font-medium">About Us</a>
      <a href="/bootcamp" class="text-gray-300 hover:text-blue-400 block px-3 py-2 rounded-md text-base font-medium">Bootcamp</a>
      <a href="https://calendly.com/dronaintelligence/30min" class="bg-blue-600 hover:bg-blue-700 text-white block px-3 py-2 rounded-md text-base font-medium">Book Appointment</a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>